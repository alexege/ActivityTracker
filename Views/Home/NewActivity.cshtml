@model Activity

<h1>New Activity page</h1>
<form asp-action="createActivity" controller="Home" method="POST">
    <label asp-for="Title"></label><br>
    <span class="error" asp-validation-for="Title"></span>
    <input class="form-control" name="Title" type="text">

    <label asp-for="Date"></label><br>
    <span class="error" asp-validation-for="Date"></span>
    <input class="form-control" name="Date" type="Date">
    
    <!-- <label asp-for="Time"></label><br>
    <span class="error" asp-validation-for="Time"></span>
    <input class="form-control" name="Time" type="Date"> -->

     <div class="form-group">
        <label asp-for="Time">Time:</label>
        <span class="err" asp-validation-for="Time"></span>
        <input class="form-control" asp-for="Time">
    </div>

    <label asp-for="Duration">Duration:</label>
    <!-- <span class="err" asp-validation-for="Duration"></span> -->
    <input class="form-control" asp-for="Duration">
    
    <!-- <label asp-for="Duration"></label><br>
    <span class="error" asp-validation-for="Duration"></span>
    <input class="form-control" name="Duration" type="text"> -->
    <select asp-for="DurationMeasure">
        <option value="Hours">Hours</option>
        <option value="Minutes">Minutes</option>
        <option value="Days">Days</option>
    </select>

    <br>
    <label asp-for="Description"></label><br>
    <span class="error" asp-validation-for="Description"></span><br>
    <!-- <input class="form-control" name="Description" type="text"> -->
    <textarea name="Description" cols="30" rows="10"></textarea>
    <br>
    <button>Create Activity</button>
</form>